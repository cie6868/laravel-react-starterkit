{
    "name": "createAccount",
    "class": "createAccount-form",
    "fields": [
        {
            "name": "fullname",
            "label": "Full Name",
            "type": "text",
            "placeholder": "fullname",
            "validation": "required|alpha|min:3",
            "class": "txt-fullname",
            "wrapperClass": "txt-fullname-wrapper"
        },
        {
            "name": "address",
            "label": "Address",
            "type": "text",
            "placeholder": "Residential Address",
            "validation": "required|alpha_dash|min:3",
            "class": "txt-address",
            "wrapperClass": "txt-address-wrapper"
        },
        {
            "name": "dob",
            "label": "Date of Birth",
            "type": "date",
            "placeholder": "Date of Birth",
            "validation": "required|date",
            "class": "txt-dob",
            "wrapperClass": "txt-dob-wrapper"
        },
        {
            "name": "nic",
            "label": "NIC Number",
            "type": "text",
            "placeholder": "NIC Number",
            "validation": "required|nic_lk",
            "class": "txt-nic",
            "wrapperClass": "txt-nic-wrapper"
        },
        {
            "name": "email",
            "label": "Email Address",
            "type": "email",
            "placeholder": "Email Address",
            "validation": "required|email",
            "class": "txt-email",
            "wrapperClass": "txt-email-wrapper"
        },
        {
            "name": "phone",
            "label": "Phone Number",
            "type": "text",
            "placeholder": "Phone Number",
            "validation": "required|phone_lk",
            "class": "txt-phone",
            "wrapperClass": "txt-phone-wrapper"
        },
        {
            "name": "role",
            "label": "Role",
            "type": "radio",
            "placeholder": "Role",
            "options": {
                "dev": "Developer",
                "tl": "Team Lead",
                "qa": "Quality Assurance",
                "ba": "Business Analyst",
                "pm": "Project Manager"
            },
            "validation": "required",
            "class": "rad-role",
            "wrapperClass": "rad-role-wrapper"
        },
        {
            "name": "toc_accepted",
            "label": "I accept the terms and conditions",
            "type": "checkbox",
            "validation": "required",
            "class": "chk-toc",
            "wrapperClass": "chk-toc-wrapper"
        }
    ],
    "submit": {
        "label": "Create Account",
        "class": "btn-create"
    }
  }
