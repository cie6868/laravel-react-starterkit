{
    "name": "checkValidation",
    "class": "checkValidation-form",
    "fields": [
        {
            "name": "fullname",
            "label": "Full Name",
            "type": "text",
            "placeholder": "fullname",
            "validation": "required|letters",
            "class": "txt-fullname",
            "wrapperClass": "txt-fullname-wrapper"
        },
        {
            "name": "number",
            "label": "Number Only",
            "type": "text",
            "placeholder": "Number Only",
            "validation": "required|numbers",
            "class": "txt-numbers",
            "wrapperClass": "txt-number-wrapper"
        },
        {
            "name": "date",
            "label": "Date of Birth",
            "type": "date",
            "placeholder": "Date of Birth",
            "validation": "required|date",
            "class": "txt-address",
            "wrapperClass": "date-dob-wrapper"
        },
        {
            "name": "email",
            "label": "EMAIL",
            "type": "email",
            "placeholder": "Email",
            "validation": "required|email",
            "class": "txt-email",
            "wrapperClass": "txt-nic-email"
        },
        {
            "name": "phone",
            "label": "phone number",
            "type": "number",
            "placeholder": "Phone Number",
            "validation": "required|phone",
            "class": "txt-phone",
            "wrapperClass": "txt-number-wrapper"
        }
    ],
    "submit": {
        "label": "Check Validation",
        "class": "btn-create"
    }
  }